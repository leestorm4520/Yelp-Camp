<% layout('layouts/boilerplate') %> 

<div class="row">
    <div class="col-6 offset-3">
        <div class="card" style="width: 18rem;">
            <img src="<%=campground.image%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%=campground.title%></h5>
              <p class="card-text"><%=campground.description%></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Price: $<%=campground.price%> /night</li>
              <li class="list-group-item">Location: <%=campground.location%></li>
            </ul>
            <div class="card-body">
              <a class="card-link btn btn-info" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
              <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="post">
            <button class="card-link btn btn-danger">Delete</button>
              </form>
            </div>
            <div class="card-footer text-muted">
              2 days ago
            </div>
            <h2>Leave a Review</h2>
            <form class="mb-3"> 
              <div class="mb-3">
                <label class="from-label" for="rating">Rating</label>
                <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="body">
              </div>
              <div class="mb-3">
                <label class="form-label" for="body">Review</label>
                <textarea class="form-control"name="review[body]" id="body" cols="30" rows="5"></textarea>
              </div>
              <button class="btn btn-success">Submit</button>
            </form>
          </div>
    </div>
</div>
